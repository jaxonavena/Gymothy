<div class="container">
  <div class="form">
    <%= form_with(model: [@business, @employee]) do |form| %>
      <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% employee.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.label :role %><br>
        <%= form.text_field :role %>
        <% employee.errors.full_messages_for(:role).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>