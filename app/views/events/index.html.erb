<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", business_event_path(@business, event) %>
    </p>
  <% end %>
</div>

<div class="sectioned-display-item">
  <%= month_calendar(events: @events) do |date, events| %>
    <%= date %>
    <% events.each do |event| %>
      <div>
        <%= event.name %>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "Back to business", business_path(@business) %> |
<%= link_to "New event", new_business_event_path(@business) %>
