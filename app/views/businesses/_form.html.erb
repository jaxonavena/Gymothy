  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% business.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
-->

  <div>
    <%= form.submit %>
  </div>
<% end %>